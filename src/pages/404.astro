---
import { Image } from "astro:assets";
import bastionLogoDestroyed from "../static/images/bastion_404.jpeg";
---
<main>
    <section class="error-container">
        <h1 class="error-title">404</h1>
        <p class="error-message">Oops! The page you are looking for does not exist.</p>
        <Image class="error-image" src={bastionLogoDestroyed} alt="Bastion Logo Destroyed" />
    </section>
</main>

<style>
    .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }

    .error-title {
        font-size: 6rem;
        margin-bottom: 1rem;
    }

    .error-message {
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .error-image {
        width: 400px;
        height: auto;
        border-radius: 50%;
    }
</style>
