---
import { Image } from "astro:assets";
import "../../node_modules/flag-icons/css/flag-icons.min.css";

import Layout from "../layouts/Layout.astro";
import NavBar from "../components/navbar.astro";
import AboutMe from "../components/about-me.astro";
import bastionLogo from "../static/images/bastion.jpg";
import bastionLogoChristmas from "../static/images/bastion_christmas.jpg";
import Projects from "../components/projects.astro";
import Contact from "../components/contact.astro";
import { t } from "../i18n/translations.js";
const isChristmas = new Date().getMonth() === 11;
---

<Layout title="GrandBastion">
  <main>
    <NavBar />
    
    <!-- Hero Section -->
    <section id="top" class="section hero-section">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column">
            {
              isChristmas ? (
                <Image
                  src={bastionLogoChristmas}
                  alt="Bastion Logo"
                  width={400}
                  height={400}
                  style={{ borderRadius: "50%" }}
                />
              ) : (
                <Image
                  src={bastionLogo}
                  alt="Bastion Logo"
                  width={400}
                  height={400}
                  style={{ borderRadius: "50%" }}
                />
              )
            }
          </div>
          <div class="column is-8">
            <div class="title-group">
              <h1 class="title">GrandBastion</h1>
              <button class="experience-icon-btn" onclick="openTimelineModal()" title="Ver mi experiencia">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M14 2H6C4.9 2 4 2.9 4 4V20C4 21.1 4.89 22 5.99 22H18C19.1 22 20 21.1 20 20V8L14 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M14 2V8H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M16 13H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M16 17H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M10 9H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="experience-tooltip" data-i18n="experience.view">{t("experience.view")}</span>
              </button>
            </div>
            <h2 class="subtitle" data-i18n="home.subtitle">
              {t("home.subtitle")}
            </h2>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section">
      <div class="container">
        <AboutMe />
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section">
      <div class="container">
        <Projects />
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section">
      <div class="container">
        <Contact />
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-section {
    padding-top: 120px; /* Account for fixed navbar */
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .title-group {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    margin-bottom: 20px;
    gap: 1rem;
  }

  .title-group img {
    width: 24px;
    height: 24px;
  }

  .experience-icon-btn {
    background: none;
    border: none;
    color: #667eea;
    cursor: pointer;
    padding: 8px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    position: relative;
    width: 40px;
    height: 40px;
  }

  .experience-icon-btn:hover {
    background: rgba(102, 126, 234, 0.1);
    color: #5a67d8;
    transform: scale(1.1);
  }

  .experience-icon-btn svg {
    width: 20px;
    height: 20px;
  }

  .experience-tooltip {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 0.8rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    margin-top: 8px;
    z-index: 1000;
  }

  .experience-tooltip::before {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid transparent;
    border-bottom-color: rgba(0, 0, 0, 0.8);
  }

  .experience-icon-btn:hover .experience-tooltip {
    opacity: 1;
    visibility: visible;
  }

  .section {
    padding: 4rem 1.5rem;
  }

  .section:nth-child(even) {
    background: rgba(0, 0, 0, 0.02);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .section:nth-child(even) {
      background: rgba(255, 255, 255, 0.02);
    }
  }

  /* Manual dark mode toggle support */
  html.dark-mode .section:nth-child(even) {
    background: rgba(255, 255, 255, 0.02);
  }

  html.dark-mode .experience-icon-btn {
    color: #8b9dc3;
  }

  html.dark-mode .experience-icon-btn:hover {
    background: rgba(139, 157, 195, 0.1);
    color: #a0aec0;
  }

  /* Mobile responsiveness */
  @media screen and (max-width: 768px) {
    .hero-section {
      padding-top: 100px;
      min-height: 50vh;
    }

    .title-group {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .experience-icon-btn {
      width: 36px;
      height: 36px;
    }

    .experience-icon-btn svg {
      width: 18px;
      height: 18px;
    }

    .section {
      padding: 2rem 1rem;
    }
  }
</style>

