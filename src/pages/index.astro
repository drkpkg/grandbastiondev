---
import { Image } from "astro:assets";
import "../../node_modules/flag-icons/css/flag-icons.min.css";

import Layout from "../layouts/Layout.astro";
import NavBar from "../components/navbar.astro";
import AboutMe from "../components/about-me.astro";
import bastionLogo from "../static/images/bastion.jpg";
import bastionLogoChristmas from "../static/images/bastion_christmas.jpg";
import Getonbrd from "../components/getonbrd.astro";
import Projects from "../components/projects.astro";
import Contact from "../components/contact.astro";
import { t } from "../i18n/translations.js";
const isChristmas = new Date().getMonth() === 11;
---

<Layout title="GrandBastion">
  <main>
    <NavBar />
    
    <!-- Hero Section -->
    <section id="top" class="section hero-section">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column">
            {
              isChristmas ? (
                <Image
                  src={bastionLogoChristmas}
                  alt="Bastion Logo"
                  width={400}
                  height={400}
                  style={{ borderRadius: "50%" }}
                />
              ) : (
                <Image
                  src={bastionLogo}
                  alt="Bastion Logo"
                  width={400}
                  height={400}
                  style={{ borderRadius: "50%" }}
                />
              )
            }
          </div>
          <div class="column is-8">
            <div class="title-group">
              <h1 class="title">GrandBastion</h1>
              <Getonbrd />
            </div>
            <h2 class="subtitle" data-i18n="home.subtitle">
              {t("home.subtitle")}
            </h2>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section">
      <div class="container">
        <AboutMe />
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section">
      <div class="container">
        <Projects />
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section">
      <div class="container">
        <Contact />
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-section {
    padding-top: 120px; /* Account for fixed navbar */
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .title-group {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    margin-bottom: 20px;
    gap: 1rem;
  }

  .title-group img {
    width: 24px;
    height: 24px;
  }

  .section {
    padding: 4rem 1.5rem;
  }

  .section:nth-child(even) {
    background: rgba(0, 0, 0, 0.02);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .section:nth-child(even) {
      background: rgba(255, 255, 255, 0.02);
    }
  }

  /* Manual dark mode toggle support */
  html.dark-mode .section:nth-child(even) {
    background: rgba(255, 255, 255, 0.02);
  }

  /* Mobile responsiveness */
  @media screen and (max-width: 768px) {
    .hero-section {
      padding-top: 100px;
      min-height: 50vh;
    }

    .title-group {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .section {
      padding: 2rem 1rem;
    }
  }
</style>

