---

<section class="skills-visor">
    <div class="skills-visor__category">
        <h2 class="skills-visor__title">Consulting</h2>
        <div class="skills-visor__items">
            {
                skills.consulting.map((item) => {
                    return (
                        <div class="skills-visor__item">
                            <img src=`${url}/${item.image}` alt={item.name} />
                            <span>{item.name}</span>
                        </div>
                    );
                })
            }
        </div>
    </div>
    <div class="skills-visor__category">
        <h2 class="skills-visor__title">Frontend</h2>
        <div class="skills-visor__items">
            {
                skills.frameworks.frontend.map((item) => {
                    return (
