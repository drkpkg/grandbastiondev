---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

const url = "https://asset.grandbastion.dev"
let skills = {
    consulting: [
        {
            name: "Open Source Initiative",
            altName: "OSI",
            image: "opensourceinitiative.svg",
        },
        {
            name: "Odoo",
            altName: "Odoo",
            image: "odoo.svg",
        },
    ],
    frameworks: {
        frontend: [
            {
                name: "Angular",
