                image: "angular.svg",
            },
            {
                name: "Astro",
                altName: "Astro",
                image: "astro.svg",
            },
        ],
        backend: [
            {
                name: "Ruby on Rails",
                altName: "Rails",
                image: "rubyonrails.svg",
            },
            {
                name: "Flask",
                altName: "Flask",
                image: "flask.svg",
            },
            {
                name: "FastApi",
                altName: "FastApi",
                image: "fastapi.svg",
            },
            {
                name: "Spring Boot",
                altName: "Spring Boot",
                image: "springboot.svg",
            },
        ],
    },
    languages: [
        {
            name: "Javascript",
