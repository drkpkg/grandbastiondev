---
interface Props {
	title: string;
}
import 'bulma/css/bulma.css';
import '../static/css/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Grandbastion personal site" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<footer>
		<!-- copyright site info in the center -->
		<div class="has-text-centered">
			<p>
				<strong>GrandBastion</strong> by <strong>Drkpkg</strong>
			</p>
			<a href="https://bulma.io">
				<img
				  src="https://bulma.io/assets/images/made-with-bulma.png"
				  alt="Made with Bulma"
				  width="256"
				  height="48">
			  </a>
		</div>
	</footer>
	
	<style>
		/* Dark mode support for footer */
		@media (prefers-color-scheme: dark) {
			footer {
				background-color: #2a2a2a;
				color: #e0e0e0;
				border-top: 1px solid #404040;
				padding: 2rem 0;
			}
			
			footer p {
				color: #e0e0e0;
			}
			
			footer strong {
				color: #f5f5f5;
			}
		}

		/* Manual dark mode toggle support for footer */
		html.dark-mode footer {
			background-color: #2a2a2a;
			color: #e0e0e0;
			border-top: 1px solid #404040;
			padding: 2rem 0;
		}
		
		html.dark-mode footer p {
			color: #e0e0e0;
		}
		
		html.dark-mode footer strong {
			color: #f5f5f5;
		}
	</style>
	
	<script>
		import { initClientTranslations } from '../i18n/translations.js';
		
		// Initialize client-side translations when the page loads
		document.addEventListener('DOMContentLoaded', () => {
			initClientTranslations();
		});
	</script>
</html>
